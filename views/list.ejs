<%- include("header") -%>

  <div class="box" id="heading">
    <i class="fas fa-tasks fa-2x todo-icon"></i>
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item) { %>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>

    <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value= "<%= listTitle %>">+</button>
      </form>
  </div>

  <div class="box" id="heading">
    <h2>Create List / Jump to List</h2>
  </div>
  <div class="box" id="create-jump-list">
    <form class="item" action="/create" method="post">
      <input type="text" name="newListName" placeholder="Enter List Name" autocomplete="off">
      <button type="submit" name="button">🏃‍♀️</button>
    </form>
  </div>

<%- include("footer") -%>
